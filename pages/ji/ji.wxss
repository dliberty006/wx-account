  padding: 20rpx 0;
}
.ji_time .ji_time_li{
  border-top: 1rpx solid #c9c9c9;
  height: 82rpx;
  line-height: 82rpx;
}
.ji_time .ji_time_li:last-child{
   border-bottom: 1rpx solid #c9c9c9;
}

.ji_time .ji_time_remark_parent{
  position: relative;
}
.ji_time .ji_time_remark{
  position: absolute;
  top: 10rpx;
  left: 0;
} 
.ji_time .ji_time_li input{
  position: absolute;
